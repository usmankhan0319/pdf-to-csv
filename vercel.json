{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@now/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/upload-pdf/",
      "dest": "main.py"
    },
    { "handle": "filesystem" }
  ],
  "env": {
    "PORT": "8000"
  },
  "functions": {
    "main.py": {
      "runtime": "python3.10.12"
    }
  }
}
